<div class="container border mt-5 p-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Sign Up</h2>
      <% if resource.errors.any? %>
        <div class="alert alert-danger mt-4">
          <h4><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h4>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
        </div>

        <%= f.submit "Sign up", class: 'btn btn-primary mb-3' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
